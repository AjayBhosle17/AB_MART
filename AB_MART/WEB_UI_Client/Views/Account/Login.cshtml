@model DTO.LoginModel
<!-- Font Awesome JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(135deg, #6a11cb, #2575fc);">
    <div class="card shadow-lg p-4 rounded-4" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-3 fw-bold text-dark">Login to Your Account</h3>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email Field -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                <input asp-for="Email" class="form-control p-2" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Field with Toggle -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control p-2" placeholder="Enter your password" id="passwordField" />
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-success w-100 p-2 fw-bold">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>
        </form>

        <!-- Forgot Password -->
        <div class="mt-3 text-center">
            <a href="#" class="text-decoration-none text-dark fw-semibold">Forgot Password?</a>
        </div>

        <hr>

        <!-- Social Login Buttons -->
        <div class="d-grid gap-2">
            <a href="#" class="btn btn-danger p-2 fw-bold">
                <i class="fab fa-google"></i> Login with Google
            </a>
            <a href="#" class="btn btn-primary p-2 fw-bold">
                <i class="fab fa-facebook-f"></i> Login with Facebook
            </a>
        </div>

        <!-- Register Link -->
        <div class="mt-3 text-center">
            <p class="fw-semibold">Don't have an account? <a asp-action="Register" class="text-primary text-decoration-none">Sign Up</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <!-- Password Toggle Script -->
    <script>
        document.getElementById("togglePassword").addEventListener("click", function () {
            var passwordField = document.getElementById("passwordField");
            var icon = this.querySelector("i");

            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        });
    </script>
}
