@model DTO.LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Fullscreen background */
    .login-bg {
        background: linear-gradient(to right, #141e30, #243b55);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Glassmorphism Effect */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        padding: 30px;
        width: 100%;
        max-width: 400px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Input Fields */
    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: none;
        color: white;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

    /* Buttons */
    .btn-custom {
        width: 100%;
        border-radius: 30px;
        font-weight: bold;
    }

    .btn-google {
        background: #db4437;
        color: white;
    }

    .btn-facebook {
        background: #3b5998;
        color: white;
    }

    .btn-google:hover {
        background: #c1351d;
    }

    .btn-facebook:hover {
        background: #2d4373;
    }
</style>

<div class="login-bg">
    <div class="glass-card">
        <h3 class="text-white mb-3">Login to Your Account</h3>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <input asp-for="Email" class="form-control form-control-lg text-white" placeholder="Email Address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" type="password" class="form-control form-control-lg text-white" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success btn-lg btn-custom mt-2">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>
        </form>

        <div class="mt-3">
            <a href="#" class="text-white">Forgot Password?</a>
        </div>

        <hr class="text-white">

        <div class="d-grid gap-2">
            <a href="#" class="btn btn-google btn-lg btn-custom">
                <i class="fab fa-google"></i> Login with Google
            </a>
            <a href="#" class="btn btn-facebook btn-lg btn-custom">
                <i class="fab fa-facebook-f"></i> Login with Facebook
            </a>
        </div>

        <div class="mt-3">
            <p class="text-white">Don't have an account? <a asp-action="Register" class="text-info">Sign Up</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
