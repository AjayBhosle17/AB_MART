@model DTO.ProductModel

@{
    ViewData["Title"] = "Create Product";
}

<style>
    /* Background with Image */
    .background-container {
        background: url('/productbackground.jpg') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Glassmorphism Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        padding: 30px;
        max-width: 500px;
        width: 100%;
        color: white;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 10px;
        padding: 10px;
    }

    /* Stylish Button */
    .btn-custom {
        background: linear-gradient(to right, #ff758c, #ff7eb3);
        border: none;
        color: white;
        font-weight: bold;
        padding: 12px;
        border-radius: 30px;
        transition: 0.3s;
        width: 100%;
    }

        .btn-custom:hover {
            background: linear-gradient(to right, #ff416c, #ff4b2b);
        }

    h2, label {
        color: white;
    }
</style>

<div class="background-container">
    <div class="glass-card">
        <h2 class="text-center fw-bold">Create Product</h2>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Product Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Enter product price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold">Category ID</label>
                <input asp-for="CategoryId" class="form-control" placeholder="Enter category ID" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HomeImgUrl" class="form-label fw-bold">Product Image URL</label>
                <input asp-for="HomeImgUrl" class="form-control" placeholder="Enter image URL" />
                <span asp-validation-for="HomeImgUrl" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-custom shadow">
                    <i class="fas fa-plus-circle"></i> Create Product
                </button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-outline-light rounded-pill shadow-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
