@model DTO.CategoryModel

@{
    ViewData["Title"] = "Category Details";
}

<style>
    /* Split Background */
    .split-bg {
        background: linear-gradient(to right, #ff9a9e, #fad0c4 50%, #a18cd1 50%, #fbc2eb);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Glassmorphism effect */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        padding: 30px;
        max-width: 500px;
        width: 100%;
    }

    /* Custom Buttons */
    .btn-edit {
        background: linear-gradient(to right, #ff758c, #ff7eb3);
        border: none;
        color: white;
        font-weight: bold;
        padding: 10px 15px;
        border-radius: 30px;
        transition: 0.3s;
    }

        .btn-edit:hover {
            background: linear-gradient(to right, #ff416c, #ff4b2b);
        }
</style>

<div class="split-bg">
    <div class="glass-card text-center">
        <h2 class="fw-bold text-white">Category Details</h2>

        <dl class="row text-white">
            <dt class="col-sm-4 fw-bold">Category ID</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-4 fw-bold">Category Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit rounded-pill shadow-sm me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-light rounded-pill shadow-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
