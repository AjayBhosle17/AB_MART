@model DTO.CategoryModel

@{
    ViewData["Title"] = "Edit Category";
}

<style>
    /* Split Background */
    .split-bg {
        background: linear-gradient(to right, #ff9a9e, #fecfef 50%, #f6d365 50%, #fda085);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Glassmorphism Effect */
    .glass-card {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        padding: 30px;
        max-width: 500px;
        width: 100%;
    }

    /* Custom Buttons */
    .btn-save {
        background: linear-gradient(to right, #ff9966, #ff5e62);
        border: none;
        color: white;
        font-weight: bold;
        padding: 10px 15px;
        border-radius: 30px;
        transition: 0.3s;
    }

        .btn-save:hover {
            background: linear-gradient(to right, #e65c00, #f9d423);
        }
</style>

<div class="split-bg">
    <div class="glass-card text-center">
        <h2 class="fw-bold text-white">Edit Category</h2>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold text-light">Category Name</label>
                <input asp-for="Name" class="form-control rounded-3 shadow-sm border-light" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-save rounded-pill shadow-sm">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-outline-light rounded-pill shadow-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
