@model DTO.CategoryModel

@{
    ViewData["Title"] = "Delete Category";
}

<style>
    /* Split Background */
    .split-bg {
        background: linear-gradient(to right, #ff416c, #ff4b2b 50%, #232526 50%, #414345);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Glassmorphism Effect */
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        padding: 30px;
        max-width: 500px;
        width: 100%;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Custom Buttons */
    .btn-delete {
        background: linear-gradient(to right, #ff1e56, #ff512f);
        border: none;
        color: white;
        font-weight: bold;
        padding: 10px 15px;
        border-radius: 30px;
        transition: 0.3s;
    }

        .btn-delete:hover {
            background: linear-gradient(to right, #d31027, #ea384d);
        }

    .btn-cancel {
        border: 2px solid white;
        color: white;
        font-weight: bold;
        padding: 10px 15px;
        border-radius: 30px;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.2);
        }

    /* Text Color */
    .text-danger-glow {
        color: #ff4b2b;
        text-shadow: 2px 2px 8px rgba(255, 75, 43, 0.5);
    }
</style>

<div class="split-bg">
    <div class="glass-card text-center">
        <h2 class="fw-bold text-danger-glow">Delete Category</h2>
        <h5 class="text-white fw-bold">Are you sure you want to delete this?</h5>
        <hr class="text-light" />

        <dl class="row text-white">
            <dt class="col-sm-4 fw-bold">Category ID</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-4 fw-bold">Category Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-delete rounded-pill shadow-sm">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-cancel rounded-pill shadow-sm ms-2">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
