@model DTO.CategoryModel

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="m-0">Delete Category</h3>
                </div>
                <div class="card-body text-center">
                    <h5 class="text-danger fw-bold">Are you sure you want to delete this?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Category ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-4 fw-bold">Category Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-3">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-3 ms-2">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
